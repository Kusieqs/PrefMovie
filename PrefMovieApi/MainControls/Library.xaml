<UserControl x:Class="PrefMovieApi.Library"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrefMovieApi"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="250">
    <Border Grid.Column="2" Margin="0,10,0,10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Library" Foreground="White" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
            <ScrollViewer x:Name="LibraryScroll" Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel x:Name="FavoriteMovies" Orientation="Vertical"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
